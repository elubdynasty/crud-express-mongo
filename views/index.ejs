<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>PersonFav</title>
</head>

<body>
    <h1>What are your Favs?</h1>

    <form action="/create-users" method="POST">
        <input type="text" placeholder="name" name="name">
        <input type="text" placeholder="favorite food" name="favFood">
        <input type="text" placeholder="favorite color" name="favColor">
        <button type="submit">Submit</button>
    </form>
    

    <h2>Users Favorites</h2>

    <ul class="users">
        <!-- Loop through users -->
        <% for(var i=0; i<users.length; i++) {%>
            <li class="user">
                <!-- Output name from the iterated user object -->
                <span>
                    <%= users[i].name %>
                </span>
                <!-- Output favFood from the iterated user object -->
                <span>
                    <%= users[i].favFood %>
                </span>
                <!-- Output favColor from the iterated user object -->
                <span>
                    <%= users[i].favColor %>
                </span>
            </li>
        <% } %>
    </ul>

</body>

</html>